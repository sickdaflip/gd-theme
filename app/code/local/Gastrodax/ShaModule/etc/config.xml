<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Gastrodax_ShaModule>
            <version>0.1.0</version>
            <depends>
                <Mage_Core />
            </depends>
        </Gastrodax_ShaModule>
    </modules>

    <global>
        <models>
            <core>
                <rewrite>
                    <encryption>Gastrodax_ShaModule_Model_Encryption</encryption>
                </rewrite>
            </core>
        </models>
        <helpers>
            <core>
                <encryption_model>Gastrodax_ShaModule_Model_Encryption</encryption_model>
            </core>
        </helpers>
    </global>

    <frontend>
        <routers>
            <gastrodax_shamodule>
                <use>standard</use>
                <args>
                    <module>Gastrodax_ShaModule</module>
                    <frontName>shamodule</frontName>
                </args>
            </gastrodax_shamodule>
        </routers>
    </frontend>
</config>